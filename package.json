{
  "name": "amazing-brick",
  "description": "Wow, that brick sure is amazing!",
  "author": "Chris Leveille <cdleveille@gmail.com",
  "license": "MIT",
  "module": "src/server/index.ts",
  "type": "module",
  "scripts": {
    "lint": "bunx eslint . && bunx prettier --check .",
    "fix": "bunx eslint --fix . && bunx prettier --write .",
    "db:up": "docker compose -f \".amazing-brick-dev-container/docker-compose.yml\" up -d --build",
    "build": "bun scripts/build.ts",
    "build:prod": "bun scripts/build.ts BUN_ENV=production && workbox injectManifest workbox-config.json",
    "deploy": "flyctl deploy --remote-only --detach --no-cache",
    "dev": "bun --watch src/server/index.ts",
    "start": "bun src/server/index.ts"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.21",
    "@types/minify": "^9.1.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/reload": "^3.2.3",
    "bun-copy-plugin": "^0.2.1",
    "bun-types": "latest",
    "eslint": "^9.10.0",
    "minify": "^11.4.0",
    "prettier": "^3.3.3",
    "reload": "^3.3.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.4.0",
    "workbox-cli": "^7.1.0",
    "workbox-routing": "^7.1.0",
    "workbox-strategies": "^7.1.0"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "mongoose": "^8.6.1",
    "nocache": "^4.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5"
  }
}
